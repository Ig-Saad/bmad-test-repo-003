# BMad v6-Powered SDLC Platform Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=localhost

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# EntraID/Azure AD Configuration
ENTRAID_CLIENT_ID=your-entraid-client-id
ENTRAID_CLIENT_SECRET=your-entraid-client-secret
ENTRAID_TENANT_ID=your-azure-tenant-id
ENTRAID_AUTHORITY=https://login.microsoftonline.com/your-tenant-id/v2.0
ENTRAID_AUDIENCE=api://your-application-id

# Database Configuration
DATABASE_URL="postgresql://admin:password@localhost:5432/ignis_web?schema=public"

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External Service Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Ignis Platform Configuration
IGNIS_PLATFORM_URL=https://api.ignis-platform.com
IGNIS_API_KEY=your-ignis-api-key

# OpenTelemetry Configuration
OTLP_EXPORTER_ENDPOINT=http://localhost:4318/v1/traces
OTLP_SERVICE_NAME=bmad-platform-backend
OTLP_SERVICE_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_TRACING=true