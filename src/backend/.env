# BMad v6-Powered SDLC Platform Backend Environment Configuration
# Development Environment

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=localhost

# JWT Configuration
JWT_SECRET=dev-super-secret-jwt-key-for-bmad-v6-platform-development
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# EntraID/Azure AD Configuration
# For local development, you can use placeholder values or set up Azure AD app registration
ENTRAID_CLIENT_ID=dev-client-id
ENTRAID_CLIENT_SECRET=dev-client-secret
ENTRAID_TENANT_ID=dev-tenant-id
ENTRAID_AUTHORITY=https://login.microsoftonline.com/dev-tenant-id/v2.0
ENTRAID_AUDIENCE=api://dev-application-id

# Alternative Azure AD variable names (for compatibility)
AZURE_CLIENT_ID=
AZURE_TENANT_ID=
AZURE_AUTHORITY=https://login.microsoftonline.com/tenant-id

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/ignis_web?schema=public"

# Redis Configuration (ENABLED for Epic 1 BMad Framework caching)
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External Service Configuration
# GitHub OAuth App for repository access validation
GITHUB_OAUTH_CLIENT_ID=your-github-oauth-client-id
GITHUB_OAUTH_SECRET=your-github-oauth-secret

# SharePoint App Registration for Microsoft Graph API access
SHAREPOINT_CLIENT_ID=your-sharepoint-app-client-id
SHAREPOINT_CLIENT_SECRET=your-sharepoint-app-secret

# Ignis Platform API Configuration
IGNIS_API_ENDPOINT=https://api.ignis.platform
IGNIS_API_KEY=your-ignis-api-key

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_DOMAINS=*.yourdomain.com,localhost

# Rate Limiting
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_AUTH=5
RATE_LIMIT_API=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/application.log

# Request Configuration
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb

# Cache Configuration (Redis TTL in seconds)
CACHE_TTL_DEFAULT=3600
CACHE_TTL_SHORT=300
CACHE_TTL_LONG=86400

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Encryption Key for sensitive configuration data
CONFIG_ENCRYPTION_KEY=dev-config-encryption-key-32-chars